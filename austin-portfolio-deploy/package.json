{
  "name": "blaze-intelligence",
  "version": "2.0.0",
  "description": "Professional-grade sports analytics platform with real-time performance tracking and AI-powered insights",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "vite preview",
    "dev": "vite",
    "build": "node build.js",
    "build:unified": "node build.js && npm run postbuild",
    "postbuild": "node scripts/postbuild.js",
    "preview": "vite preview",
    "serve": "python3 -m http.server 8080 --directory dist",
    "optimize": "node scripts/optimize-assets.js",
    "deploy:netlify": "npm run build:unified && echo 'Ready for Netlify deployment'",
    "deploy:vercel": "vercel --prod",
    "deploy:github": "npm run build && gh-pages -d dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate": "vite build --mode development"
  },
  "keywords": [
    "sports",
    "analytics",
    "AI",
    "performance",
    "tracking",
    "baseball",
    "football",
    "basketball"
  ],
  "author": "Blaze Intelligence",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.4.3",
    "terser": "^5.44.0",
    "vite": "^5.4.20"
