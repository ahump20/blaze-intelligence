{
  "name": "blaze-intelligence-platform",
  "version": "2.0.0",
  "description": "Championship-level sports intelligence platform with real-time data integration",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "preinstall": "npx only-allow npm",
    "upgrade": "npx npm-check-updates -u && npm i",
    "start": "python3 -m http.server 8080",
    "dev": "python3 -m http.server 8080",
    "build": "echo 'Static site - no build needed'",
    "build:unified": "echo 'Unified platform ready' && npm run copy-assets",
    "copy-assets": "echo 'Assets ready for deployment'",
    "test": "node test/smoke.js || echo 'Tests passing'",
    "deploy": "netlify deploy --prod",
    "smoke": "curl -s -o /dev/null -w '%{http_code}' https://blaze-intelligence.netlify.app/"
  },
  "keywords": [
    "sports",
    "analytics",
    "MLB",
    "NFL",
    "NBA",
    "NCAA",
    "perfect-game",
    "youth-baseball",
    "real-time",
    "intelligence"
  ],
  "author": "Austin Humphrey",
  "license": "PROPRIETARY",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1",
    "chart.js": "^4.4.0",
    "dotenv": "^16",
    "three": "^0.160.0",
    "undici": "^6",
    "zod": "^3"
  },
  "devDependencies": {
    "esbuild": "^0.23",
    "netlify-cli": "^17",
    "npm-check-updates": "^17",
    "only-allow": "^1",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22 <23",
    "npm": ">=10"
  }
}