{
  "npm_audit": {
    "enabled": true,
    "audit_level": "moderate",
    "fail_on": [
      "critical",
      "high"
    ],
    "exclude_dev": false
  },
  "snyk": {
    "enabled": true,
    "severity_threshold": "medium",
    "auto_fix": {
      "enabled": true,
      "patch_only": true
    }
  },
  "sonarjs": {
    "enabled": true,
    "quality_gate": {
      "coverage": 80,
      "duplicated_lines_density": 3,
      "maintainability_rating": "A",
      "reliability_rating": "A",
      "security_rating": "A"
    }
  },
  "zap": {
    "enabled": true,
    "target": "https://blaze-intelligence.netlify.app",
    "spider": true,
    "ajax_spider": false,
    "active_scan": true
  }
}