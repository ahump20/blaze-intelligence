# Blaze Intelligence Staging Environment Configuration
NODE_ENV=staging
BLAZE_ENVIRONMENT=staging
PORT=8888

# Staging Feature Flags
STAGING_MODE=true
DEBUG_MODE=true
VERBOSE_LOGGING=true
PERFORMANCE_MONITORING=true

# Staging Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000
DISABLE_CACHING=false

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Security Settings (Staging-optimized)
CORS_ORIGINS=*
SECURITY_HEADERS=enhanced
CSP_ENABLED=true
RATE_LIMITING=enabled

# Monitoring and Analytics
MONITORING_ENABLED=true
ANALYTICS_ENABLED=true
ERROR_TRACKING=true
PERFORMANCE_TRACKING=true

# Database/Storage Settings
DATA_REFRESH_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# Feature Toggles for Staging
FEATURE_VIDEO_AI=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_ADVANCED_DASHBOARD=true
FEATURE_TEAM_INTELLIGENCE=true
FEATURE_PRESSURE_ANALYTICS=true

# Staging-specific URLs
API_BASE_URL=https://blaze-intelligence-staging.netlify.app/api
WS_URL=wss://blaze-intelligence-staging.netlify.app/ws
CDN_URL=https://blaze-intelligence-staging.netlify.app

# Test Data Configuration
USE_MOCK_DATA=false
ENABLE_TEST_ENDPOINTS=true
DEMO_MODE=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DESTINATION=console

# Deployment Information
DEPLOYMENT_ENV=staging
DEPLOYMENT_VERSION=1.0.0-staging
BUILD_NUMBER=staging-latest
LAST_DEPLOY_TIME=auto