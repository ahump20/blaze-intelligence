{
  "name": "blaze-intelligence-simple",
  "version": "1.0.0",
  "description": "Simple interface, sophisticated backend",
  "main": "simple-blaze-server.js",
  "scripts": {
    "start": "node simple-blaze-server.js",
    "dev": "netlify dev",
    "build": "npm run build:site && npm run copy:data",
    "build:site": "npm run copy:all",
    "copy:all": "mkdir -p dist && cp -R *.html css js images api icons public dist/ 2>/dev/null || true",
    "copy:data": "mkdir -p dist/data && cp -R data/* dist/data 2>/dev/null || true",
    "clean": "rm -rf node_modules package-lock.json dist build .cache",
    "clean:cache": "rm -rf .cache .netlify/cache",
    "clean:logs": "rm -f *.log deployment_*.log",
    "clean:temp": "rm -f *.tmp *.temp *~ *.save",
    "clean:all": "npm run clean && npm run clean:cache && npm run clean:logs && npm run clean:temp",
    "organize": "tools/cleanup-project.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "stripe": "^18.5.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1"
  }
}
